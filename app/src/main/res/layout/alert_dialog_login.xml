<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:id="@+id/your_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/your_name"
        android:textColor="@color/PurpleSimon"
        android:textSize="30sp" />

    <EditText
        android:inputType="text"
        android:id="@+id/edit_text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_name"
        android:layout_margin="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="@string/insert_your_name"
        android:textColor="@color/PurpleSimon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/edit_text_login"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linear_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/enter"
                android:textColor="@color/White" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button

                android:textStyle="bold"
                android:id="@+id/play_as_btn"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/play_as_guest"
                android:textAllCaps="false"
                android:textColor="@color/White" />
        </LinearLayout>

        <Button

            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/linear_btn"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:layout_marginHorizontal="90dp"
            android:background="@drawable/shape_selector_blue"
            android:text="@string/cancel"
            android:textColor="@color/White" />
    </LinearLayout>

</RelativeLayout>